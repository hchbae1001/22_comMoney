<%-include('../main/header')%>
    <div class="container-fluid">
        <!-- start of content -->
        <% let opTotal = salary_option.op1+salary_option.op2+salary_option.op3+salary_option.op4+salary_option.op5+salary_option.op6 %>
        <% let salary = salary_month - opTotal %>
        <% let op1 = salary_option.op1.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ','); %>
        <% let op2 = salary_option.op2.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ','); %>
        <% let op3 = salary_option.op3.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ','); %>
        <% let op4 = salary_option.op4.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ','); %>
        <% let op5 = salary_option.op5.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ','); %>
        <% let op6 = salary_option.op6.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ','); %>
        <% opTotal = opTotal.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ','); %>
        <% salary = salary.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ','); %>
      <div class="col-md-7 order-md-3 mb-5">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
