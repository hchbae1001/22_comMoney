      <script type="text/javascript">
        $(function(){
          
            $("#alert-success").hide();
            $("#alert-danger").hide();
            $("#submit").hide();
            $("input").keyup(function(){
                var pwd1=$("#password").val();
                var pwd2=$("#password2").val();
                if(pwd1 != "" || pwd2 != ""){
                    if(pwd1 == pwd2){
                        $("#alert-success").show();
                        $("#alert-danger").hide();
                        $("#submit").show();
                    }else{
                        $("#alert-success").hide();
                        $("#alert-danger").show();
                        $("#submit").hide();
                    }    
                }
            });
        });
    </script>
