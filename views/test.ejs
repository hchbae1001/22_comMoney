<%-include('main/header')%>
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="row">
                        <!-- Earnings (Monthly) Card Example -->
                        <% for(let i = 0; i < 4; i++){ %>
                            <div class="col-xl-3 col-md-6 mb-4">
                                <div class="card border-left-primary shadow h-100 py-2">
                                    <!-- <div class="image_area">
                                        <img src="<%=news[0].imgUrl%>" width="190" height="95">
                                    </div> -->
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                    <a href="<%= news[i].url%>" target="_blank"><%= news[i].title%></a></div>
                                                <div class="h7 mb-0 font-weight-bold text-gray-800">
                                                    <%= news[i].summary%>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>    
                        <% } %>
                    </div>

                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary"><a href="/notice/list">공지사항</a></h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="text-align: center;">
                                    <thead>
                                        <tr>
                                            <th>글번호</th>
                                            <th>제목</th>
                                            <th>작성자</th>
                                            <th>작성일</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(let i = 0; i < data.length; i++){ %>
                                            <tr>
                                                <td><%= data[i].id%></td>
                                                <td> <a href="/notice/<%= data[i].id%>"><%= data[i].subject%> </a> </td>
                                                <td><%= data[i].user_dept%>과<%= data[i].user_position%> <%= data[i].user_name%></td>
                                                <td><%= data[i].createdAt%></td>
                                            </tr>                                
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
<%-include('main/footer')%>